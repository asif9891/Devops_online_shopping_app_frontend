@Library('shared') _
pipeline{
    agent any
    
    environment{ SONAR_HOME = tool "Sonar"}
    
    parameters{
        string(name:'Frontend_version', defaultValue:'', description:'')
    }
    
    stages{
        stage('validate parameter'){
            steps{
                script{
                    if( params.Frontend_version == "")
                    {
                        error("Version is required")
                    }
                }
            }
        }
        stage('Clean Workspace'){
            steps{
                cleanWs()
            }
        }
        stage('code checkout'){
            steps{
                code_checkout('https://github.com/asif9891/Devops_online_shopping_app_frontend.git','main')
            }
        }
        stage('scan the directory'){
            steps{
                trivy_scan()
            }
        }
        stage('OWASP Download'){
            steps{
                owasp_dependency()
            }
        }
        stage('sonarqube'){
            steps{
                sonarqube_analysis("Sonar","node-frontend","node-frontend")
            }
        }
        stage('sonarqube gate analysis'){
            steps{
                 sonarqube_code_quality()
            }
        }
        stage('build the image'){
              steps{
                  //docker_compose(params.Frontend_version)
                  sh """
                  export TAG=${params.Frontend_version}
                  docker-compose up -d
                """
              }
        }
        stage('notification'){
            steps{
                    emailext attachLog: true,
                from: 'asifnadeemdss@gmail.com',
                subject: "Wanderlust Application has been updated and deployed - '${currentBuild.result}'",
                body: """
                    <html>
                    <body>
                        <div style="background-color: #FFA07A; padding: 10px; margin-bottom: 10px;">
                            <p style="color: black; font-weight: bold;">Project: ${env.JOB_NAME}</p>
                        </div>
                        <div style="background-color: #90EE90; padding: 10px; margin-bottom: 10px;">
                            <p style="color: black; font-weight: bold;">Build Number: ${env.BUILD_NUMBER}</p>
                        </div>
                        <div style="background-color: #87CEEB; padding: 10px; margin-bottom: 10px;">
                            <p style="color: black; font-weight: bold;">URL: ${env.BUILD_URL}</p>
                        </div>
                    </body>
                    </html>
            """,
            to: 'java.blogger91@gmail.com',
            mimeType: 'text/html'
                }
            }
        }
        
    }